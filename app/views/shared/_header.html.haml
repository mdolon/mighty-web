#header.clearfix
  %nav.navbar.navbar-default{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#header-nav", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand.trackEvent{href: root_url(), data: {name: "Clicked logo in header"}}
          = image_tag("logo-md.png", class: "logo")
      #header-nav.collapse.navbar-collapse
        %a.btn.btn-default.navbar-btn.navbar-right.scroll-link.hidden-xs.trackEvent{href: "#request-info", data: {name: "Clicked Sign In button"}} Request Info
        %ul.nav.navbar-nav.navbar-right
          %li
            %a.scroll-link.trackEvent{:href => "#learn", data: {name: "Clicked How It Works"}} How It Works
          %li.hidden-sm.hidden-md.hidden-lg
            %a.scroll-link.trackEvent{:href => "#request-info", data: {name: "Clicked Sign In link"}} Request Info
