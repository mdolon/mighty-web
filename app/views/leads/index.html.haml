.container.simple-page
  .panel
    .panel-heading
      %h1 Listing leads
    .panel-body
      %table.table
        %thead
          %tr
            %th Name
            %th Objective
            %th Activities
            %th Pricepoint
            %th Email
            %th Startdate
            %th{:colspan => "3"}
        %tbody
          - @leads.each do |lead|
            %tr
              %td= lead.name
              %td= lead.objective
              %td= lead.activities
              %td= lead.pricepoint
              %td= lead.email
              %td= lead.startdate
              %td= link_to 'Show', lead
              %td= link_to 'Edit', edit_lead_path(lead)
              %td= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' }
      %br
        = link_to 'New Lead', new_lead_path, class: "btn btn-lg btn-default"
